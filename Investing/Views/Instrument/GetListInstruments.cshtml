@model List<Investing.Models.SingleModelExchangeInstruments>
<body>
    <div id="app">
        <table class="table" id="sortTable">
            <thead>
                <tr>
                    <th>Название</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ShortName</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Форма добавления новой задачи -->
        <div id="add-form">
            <input type="text" id="newTodoInput" placeholder="Введите новую задачу..." style="padding: 8px; width: 300px;">
            <button onclick="addTodo()">Добавить</button>
        </div>

        <!-- Сообщение об ошибке -->
        <div id="error-message" class="error" style="display: none;"></div>

        <!-- Список задач -->
        <ul id="todoList" class="todo-list"></ul>

        <!-- Статистика -->
        <div id="stats" style="margin-top: 20px; font-size: 14px; color: #666;"></div>
    </div>

    <script src="~/js/instrument.js"></script>
</body>